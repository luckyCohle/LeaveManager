generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  username       String         @unique
  password       String
  role           Role
  leavesBalance  LeaveBalance?
  leaveHistory   LeaveHistory[]
}

model LeaveBalance {
  id       String @id @default(cuid())
  casual   Int
  sick     Int
  earned   Int
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model LeaveHistory {
  id           String        @id @default(cuid())
  category     LeaveCategory
  status       LeaveStatus
  requestedOn  DateTime
  fromDate     DateTime
  toDate       DateTime
  totalLeaves  Int
  reason       String
  user         User          @relation(fields: [userId], references: [id])
  userId       String
}

enum Role {
  Admin
  Staff
}

enum LeaveCategory {
  casual
  sick
  earned
}

enum LeaveStatus {
  requested
  approved
  rejected
}